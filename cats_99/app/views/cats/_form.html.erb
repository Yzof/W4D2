
<% if type == :new %>
  <% action_url = cats_url %>
  <% button_value = 'Create Cat'%>
<% elsif type == :edit%>
  <% action_url = cat_url(cat) %>
  <% button_value = 'Edit Cat'%>
<% end %>

<form action="<%= cats_url %>" method="POST">
  <% if type == :edit %>
  <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <br><br>

  <label for="name"> Name: </label>
  <input id = "name" type="text" name="cat[name]" value="<%= cat.name %>"/>
  <br><br>

  <label for="sex"> Sex: </label>
  <input id = "sex" type="radio" id="male" name="cat[sex]" value="M">
    <label for="male">Male</label>
  <input id = "sex" type="radio" id="female" name="cat[sex]" value="F">
    <label for="female">Female</label>
    <br><br>

  <label for="color"> Color: </label>
  <select id = "color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected" %>>--Select Color--</option>
    <option value="brown" <%= cat.color == "brown" ? "selected" : "" %>>Brown</option>
    <option value="orange" <%= cat.color == "orange" ? "selected" : "" %>>Orange</option>
    <option value="white" <%= cat.color == "white" ? "selected" : "" %>>White</option>
    <option value="black" <%= cat.color == "black" ? "selected" : "" %>>Black</option>
    <option value="grey" <%= cat.color == "grey" ? "selected" : "" %>>Grey</option>
    <option value="calico" <%= cat.color == "calico" ? "selected" : "" %>>Calico</option>
  </select>
  <br>
  <br>

  <label for="date"> Birth Date: </label>
  <input id = "date" type="date" name="cat[birth_date]" value="<%= cat.birth_date%>">

  <br><br>
  <label for="description"> Description: </label>
  <textarea name="cat[description]">
    <%= cat.description %>
  </textarea>
  <br><br>

  <input type='submit' value=button_value >

</form>
